{
  "include": ["client/src/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020", // ðŸ‘ˆ RECOMMENDED: Make sure target is defined
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // ðŸ‘ˆ ADD: Helps with smoother imports
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true, // ðŸ‘ˆ ADD: If you're importing JSON files
    "resolvePackageJsonExports": true,   // ðŸ‘ˆ Optional, but useful in monorepos
    "resolvePackageJsonImports": true,   // ðŸ‘ˆ Optional, helps bundlers
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"]
    }
  }
}
